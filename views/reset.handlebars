<div class="container-signin">
  <div class="signin-header">
      <h1>Reset Password</h1>
  </div>

  <form class="form-signin" action="/users/reset/{{token}}" method="POST">
    <div class="form-group">
      <label for="inputPassword" class="sr-only">New Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
    </div>

    <div class="form-group">
      <label for="inputConfirmPassword" class="sr-only">Confirm Password</label>
      <input type="password" id="inputConfirmPassword" name="confirmationPassword" class="form-control" placeholder="Confirm Password" required>
    </div>

    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Update Password</button>
    </div>
  </form>

</div>
